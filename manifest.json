{
    "name": "BUZZ RANKER",
    "manifest_version": 2,
    "version": "1.2",
    "description": "",
    "icons" : {
      "128": "images/thumb.png"
    },
    "permissions": [
        "storage", "*://*.twitter.com/*", "*://*.google.co.jp/*", "*://*.hatena.ne.jp/*"
    ],
    "content_scripts": [{
        "matches": ["https://www.google.co.jp/*"],
        "js": ["scripts/content.js"],
        "run_at": "document_end"
    }],
    "background": {
      "scripts": ["scripts/background.js"]
    },

    "browser_action": {
        "default_icon": {
          "19": "images/on.png",
          "38": "images/on.png"
        },
        "default_title": "BUZZ RANKER"
    },

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}